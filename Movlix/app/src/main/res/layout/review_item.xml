<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dime_15dp">

        <ImageButton
            android:id="@+id/ib_profile"
            android:layout_width="@dimen/dime_icon"
            android:layout_height="@dimen/dime_icon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_icon"/>



    </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_username"
            style="@style/smallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:text="@string/roy_mckenzie" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/smallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_marginStart="37dp"
            android:paddingTop="@dimen/dim_5"
            android:paddingBottom="@dimen/dim_5"
            android:text="@string/the_french_revolution_constituted_for_the_conscience_of_the_dominant_aristocratic_class_a_fall_from_innocence_and_upturning_of_the_natural_chain_of_events_that_resounded_all_over_europe"
            android:textAlignment="textStart"
            android:maxLines="3"
            android:textColor="@color/transparent" />


    </RelativeLayout>

</LinearLayout>